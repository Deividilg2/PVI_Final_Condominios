

<form method="post" id="myform">

    <div class="mb-2">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" id="nombre" name="nombre" class="form-control" maxlength="250" placeholder="Nombre de servicio" />
    </div>

    <div class="mb-2">
        <label for="descripcion" class="form-label">Desccripción</label>
        <input type="text" id="descripcion" name="descripcion" class="form-control" maxlength="250" placeholder="Descripción del servicio" />
    </div>

    <div class="mb-2">
        <label for="precio" class="form-label">Precio</label>
        <input type="number" id="precio" name="precio" class="form-control" step="0.01" min="1" />
    </div>

    <div class="mb-2">
        <label class="form-label" for="categoria">Categoría</label>
        <select id="categoria" name="categoria" class="form-control">
            <option value="">Seleccione una categoría</option>
        </select>
    </div>

    <input type="submit" id="Guardado" class="btn btn-primary" value="Guardar" />
    <input type="button" value="Inactivar" id="Inactivar" class="btn btn-danger" />
    <input type="button" value="Cerrar" id="cerrar" class="btn btn-dark" />
</form>








